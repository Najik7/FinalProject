@model FinalProject.ViewModels.SignUpViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Login";
}
<div class="row">
    <div class="text-danger" asp-validation-summary="All">
    </div>
        <div class="col-md-4"></div>
        <div class="col-md-4" style="margin-top:100px">
            <form class="form-group" action="Signup" method="post">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Регистрация</h5>
                        <div class="form-group">
                            <label for="">Имя</label>
                            <input type="text" asp-for="FirstName" class="form-control" placeholder="Ваше имя">
                        </div>
                        <div class="form-group">
                            <label for="Login">Фамилия</label>
                            <input type="text" asp-for="LastName" class="form-control" placeholder="Ваша фамилия">
                        </div>
                        <div class="form-group">
                            <label for="">Телефон</label>
                            <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Номер телефона">
                        </div>
                        <div class="form-group">
                            <label for="">Дата рождения</label>
                            <input type="date" asp-for="DOB" class="form-control" >
                        </div>
                        <div class="form-group">
                            <label for="Login">Логин</label>
                            <input type="text" asp-for="Login" class="form-control" placeholder="Ваш логин">
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <input type="Email" asp-for="Email" class="form-control" id="exampleInputPassword1" placeholder="Email">
                        </div> 
                        <div class="form-group">
                            <label>Пароль</label>
                            <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Ваш пароль">
                        </div>
                        <button type="submit" class="btn btn-primary">Регистарция</button> 
                       
                    </div>
                </div>
            </form>
        </div>
</div>



